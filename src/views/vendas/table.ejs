<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-slate-950 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Cliente</th>
                <th scope="col" class="px-6 py-3">Telefone</th>
                <th scope="col" class="px-6 py-3">Carro</th>
                <th scope="col" class="px-6 py-3">Chassi</th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Ação</span>
                </th>
            </tr>
        </thead>
        <tbody>

            <% vendas.forEach((item)=> { %>

                <tr class="border-b bg-secondary dark:border-gray-700 hover:bg-gray-600">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= item.name %>
                    </th>
                    <td class="px-6 py-4">
                        <%= item.telefone %>
                    </td>
                    <td class="px-6 py-4">
                        <%= item.carro %>
                    </td>
                    <td class="px-6 py-4">
                        <%= item.chassi %>
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Editar</a>
                        <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Peças</a>
                    </td>
                </tr>
                <% }) %>


        </tbody>
    </table>
</div>