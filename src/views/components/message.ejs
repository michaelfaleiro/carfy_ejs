<% if (message) { %>

    <section class=" text-sm message 
      w-full mx-auto p-2 fixed  font-medium  border bg-gray-300
    ">
        <div class="w-[50%] mx-auto flex justify-between">
            <% if(type=='error' ) { %>
                <p class="text-red-700">
                    <% } else { %>
                        <p class="text-green-100">
                            <% } %>
                                <%= message %>
                        </p>
                        <span id="close-message"><i class="fa-solid fa-square-xmark fa-xl "></i></span>
        </div>
    </section>

    <% } %>